<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scrollableViewPager="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhenglee.langfangfavor.android.modules.home.HomeActivity">


    <com.zhenglee.framework.ui.ScrollableViewPager
        android:id="@+id/home_activity_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        scrollableViewPager:scrollable="false"/>

    <LinearLayout
        android:id="@+id/home_activity_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

</LinearLayout>
