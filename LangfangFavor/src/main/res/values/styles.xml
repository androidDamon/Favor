<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.Favor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:logo">@drawable/ic_launcher</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="android:actionBarStyle">@style/FavorActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/FavorActionBarTitleText</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FavorActionBar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

    <style name="FavorActionBarTitleText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FavorActionBarOverFlow">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Theme.Holo.Favor.SplashActivity" parent="@style/Theme.AppCompat.Light.Favor">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
