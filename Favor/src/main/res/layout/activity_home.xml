<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrollableViewPager="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhenglee.langfangfavor.android.modules.home.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:logo="@drawable/ic_launcher"
        app:title="@string/app_name"/>

    <com.zhenglee.framework.ui.widget.ScrollableViewPager
        android:id="@+id/home_activity_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        scrollableViewPager:scrollable="true"/>

    <LinearLayout
        android:id="@+id/home_activity_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>

</LinearLayout>
